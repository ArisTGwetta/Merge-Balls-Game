    <script>
        // Simple function to confirm button works (no actual game code)
        function alertPong() {
             const modal = document.createElement('div');
             modal.className = 'fixed inset-0 bg-gray-900 bg-opacity-75 flex items-center justify-center z-50';
             modal.innerHTML = `
                <div class="bg-white p-6 rounded-lg shadow-xl text-center">
                    <p class="text-xl font-bold mb-4">Pong is Ready!</p>
                    <p class="text-gray-700">This placeholder confirms the AppSheet link is working correctly.</p>
                    <button class="mt-4 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" onclick="this.parentNode.parentNode.remove()">Close</button>
                </div>
             `;
             document.body.appendChild(modal);
        }
    </script>
